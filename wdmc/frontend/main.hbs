<script>
    const link = `http://localhost:8080/club/get`
    console.log(link)
    fetch(link)
        .then(response => response.json())
        .then(data => {
            console.log(data)
            const club_list_div = document.getElementById("club_list");

            for (let i = 0; i < data.length; i++) {

                const club_name = document.createElement("a");
                club_name.href = "club/" + data[i].ClubName;
                club_name.innerHTML = data[i].ClubName;
                club_list_div.appendChild(club_name)
                const br = document.createElement("br");
                club_list_div.appendChild(br)

            }
        })
</script>

