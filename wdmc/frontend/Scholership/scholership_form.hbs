<body>

  <div class="container" style="align-items: center; display: flex; justify-content: center; margin-top: 100px;">
    <form id="myform" action="/scholership/Update" method="POST" style="margin: 40px;">
      <h1>Scholership Details</h1>
      <div class="mb-3">
        <label for="exampleInputCName" class="form-label">Scholership Name: </label>
        <input name="Name" type="text" class="form-control" id="exampleInputCName" aria-describedby="emailHelp"
          required>
      </div>
      <div>
        Content:
      </div>

      <textarea id="content" name="Content" rows="3"> </textarea>

      <div id="addMoreMembers">
      </div>

      {{!-- <button type="button" onclick="funcn()">Add more members</button> &nbsp; &nbsp;
      <button type="button" onclick="funcn1()">Delete members</button> --}}




      <button type="submit" class="btn btn-outline-success" style="margin: 20px;">Submit</button>
    </form>
  </div>
</body>



<div></div>
<script>
  CKEDITOR.replace('Content', {
    fullPage: true,
    allowedContent: true,
    autoGrow_onStartup: true,
    enterMode: CKEDITOR.ENTER_BR
  });
  var input = document.getElementById("exampleInputCName");

  input.addEventListener('keypress', (event) => {
    if (event.key === "Enter") {
      let name = document.getElementById('exampleInputCName').value;
      const link = `http://localhost:8080/scholership/get/${name}`;
      //console.log(link)
      fetch(link)
        .then(response => response.json())
        .then(data => {
          if (data[0] != undefined) {
            CKEDITOR.instances.content.insertHtml(data[0].Content);
            document.getElementById('exampleInputCName').value = data[0].Name;
          }
        });
    }
  });
  document.getElementById("myform").onkeypress = function (e) {
    var key = e.charCode || e.keyCode || 0;
    if (key == 13) {

      e.preventDefault();
    }
  }

</script>

</html>