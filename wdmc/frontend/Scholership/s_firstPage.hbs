<script>
     const link = `http://localhost:8080/scholership/get`;
    console.log(link)
    fetch(link)
    .then(response => response.json())
    .then(data => {    
    const list_el=document.getElementById('list');
    console.log(data);
    for(let i=0;i<data.length;i++){

     let li = document.createElement("li");
     const club_name = document.createElement("a");
     club_name.href = "scholership/" + data[i].Name;
     club_name.innerHTML = data[i].Name;
     li.appendChild(club_name);
     list_el.appendChild(li);
    }
    
    })


</script>

